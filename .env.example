# MÂ²F - Micro Merchant Finance Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# CELO NETWORK RPC URLs
# =============================================================================
CELO_RPC_URL=https://forno.celo.org
CELO_ALFAJORES_RPC_URL=https://alfajores-forno.celo-testnet.org
CELO_BAKLAVA_RPC_URL=https://baklava-forno.celo-testnet.org

# =============================================================================
# API KEYS
# =============================================================================
# Get your API key from https://celoscan.io/apis
CELO_API_KEY=your_celo_api_key_here

# Get your API key from https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Private key for deployment (without 0x prefix)
# WARNING: Never commit your private key to version control
PRIVATE_KEY=your_private_key_here

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable gas reporting in tests
REPORT_GAS=true

# Enable coverage reporting
COVERAGE=true
